<div class="inbox_chat">
  <div class="chat_list active_chat">
    <div class="chat_people">
      <div class="chat_img"><%= image_tag @user.img.url if @user.img? %></div>
        <div class="chat_ib">
          <h5><%= @user.name %><span class="chat_date"></span></h5>
            <p>
              <%= @messages.each do |message| %>
                <%= message.content %>
              <% end %> 
            </p>
          </div>
        </div>
     </div>                            
  </div>
</div>
<%= stylesheet_link_tag "comments" %>

<div class="py-4">
  <h2 class="text-center py-4 text-white"><span style="border-bottom: 1px solid #fff">Comment</span></h2>
    <div class="container">
      <% @comments.each do |c| %>
          <%= c.title %>
          <%#= image_tag @comment.user_img if user.img? #%>                 
          <%= c.content %>
          <%= c.created_at.strftime('%Y/%m/%d') %>      
      <% end %>
    </div>
</div>
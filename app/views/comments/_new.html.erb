<div class="modal fade" id="modalCommentForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
      
        <h4 class="modal-title w-100 font-weight-bold">Comment</h4>

          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
      </div>

      <%= form_with(model: @comment, url: post_comments_path(@post), method: :post, local: true) do |f| %>
          <% if @comment.errors.any? %>
              <div id="error_explanation">
                  <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being sent:</h2>
                <ul>
                  <% @comment.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
        <div class="py-4">
          <div class="modal-body mx-3">
            <div class="my-5">
            <%= f.label :title, class:"mr-2" %></br>
            <%= f.text_field :title %>
            </div>

            <div class="mb-4">
            <%= f.label "Comment", class:"mr-2" %></br>
            <%= f.text_area :content, class:"py-5 w-100" %>
            </div>
          </div>

          <div class="modal-footer d-flex justify-content-center">
            <%= f.submit "Send", class:"btn btn-secondary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="text-center py-4 mx-3">
  <a href=""  data-toggle="modal" data-target="#modalCommentForm", class:"btn btn-secondary w-100">
  Comment</a>
</div>
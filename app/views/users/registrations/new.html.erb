<%= stylesheet_link_tag "socialBtns", :media => "all" %>
<div class="py-4 bg-info">
  <div class="container text-center">
    <div class="card mt-3">
      <h5 class="card-header text-center py-4">
        <strong>Sign up</strong>
      </h5>
    <div class="card-body px-lg-5 pt-0" style="color: #757575;"> 
      <!--------------- Form ------------------> 
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <!-- name -->
         <div class="md-form py-4">
             <%= f.label :Name %><br />
             <%= f.text_field :name, class:'form-control', autofocus: true, autocomplete: "name" %>
         </div>
         <!-- Email -->
         <div class="md-form py-4">
             <%= f.label :email %><br />
             <%= f.email_field :email, class:'form-control', autofocus: true, autocomplete: "email" %>
         </div>
         <div class="md-form py-4">
            <%= f.label :Id %><br />
            <%= f.text_field :char_id, class:'form-control' %>
         </div>
      <!----------------- Password --------------- -->
         <div class="md-form py-4">
           <%= f.label :password %><br />
           <% if @minimum_password_length %>
           <em>(<%= @minimum_password_length  %> characters minimum)</em>
           <% end %><br />
           <%= f.password_field :password, autocomplete: "new-password", class:'form-control'%>
         </div>
      <!----------------- Password confirmation --------------- -->
         <div class="md-form py-4">
           <%= f.label :password_confirmation %><br />
           <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-control' %>
         </div>
         <!---------  reason   ---------->
          <div class="py-4 form-group row">
             <legend class="col-form-label col-md-6">
                  <p class="text-warning"> How did you find us ?</p>
             </legend>
               <div class="col-md-6">
                   <div class="form-check form-check-inline">
                       <input class="form-check-input" type="radio" name="questionnaire" id="radio01" value="answer1">
                       <label class="form-check-label" for="radio01">friends</label>
                   </div>
                   <div class="form-check form-check-inline">
                       <input class="form-check-input" type="radio" name="questionnaire" id="radio02" value="answer2">
                       <label class="form-check-label" for="radio02">Website</label>
                   </div>
                   <div class="form-check form-check-inline">
                       <input class="form-check-input" type="radio" name="questionnaire" id="radio03" value="answer3">
                       <label class="form-check-label" for="radio03">Magazine</label>
                   </div>
               </div>
          </div>

          <div class="actions py-3">
            <%= f.submit "Sign up", class: "btn btn-primary alert alert-primary w-100" %>
          </div>
         
        <% end %>

        <div class="py-4">
          <div class="bg-dark container text-center" style="color: #757575;" id="page-content">
            <div class="card bg-secondary">
              <div class="nav justify-content-start">             
                <div class="card-body">
                    <h4 class="card-title mb-3 text-white"> or sign up with:</h4>
                      <div class="social-icon"> 
                        <%= link_to "Facebook", user_facebook_omniauth_authorize_path, class:"btn btn-social-icon btn-facebook btn-rounded w-100" %>
                      </div>
                </div>
              </div>
            </div>
          </div>             
        </div>
      </div>
    </div>
  </div>
</div>
<% provide(:title, @user.name) %>
<%= stylesheet_link_tag 'users', media: 'all' %>
<%= stylesheet_link_tag 'card', media: 'all' %>

<div class="jumbotron jumbotron-fluid text-white">
<div class="container">
 <div class="row justify-content-center">
 <%= image_tag @user.img.url,class:"col-sm-12 col-md-6 col-lg-3 my-4 img", size: 150 if @user.img? %>
     <h2 class="mt-4 col-6 text-center display-3 col-12 col-md-6"><%= @user.name %></h3>
    
     <h4 class="pt-4 col-12 col-md-12 text-center"><%= @user.char_id %></h4>
 </div>
</div>
</div>
<!-- /main logo -->
<% if owner?(@user) %>
  <div class="py-4">
  <div class="container">
      <div class="row justify-content-center">
        <div class="my-2 text-white col-3 col-md-6">
          <%= link_to "Chat", room_path(@user), class:"btn btn-primary w-100" %>
        </div>
        <div class="my-2 text-white col-3 col-md-6">
          <%= link_to "Gallery", users_gallery_path, class:"btn btn-info w-100" %>
        </div>
        <div class="my-2 col-md-6 col-3">
            <%= link_to "New Post", new_post_path, class: "btn btn-warning text-white w-100" %>
        </div>
        <div class="my-2 col-md-6 col-3">
          <%= link_to "Edit", edit_user_registration_path(@user), class: "btn btn-success w-100" %>
        </div>
    </div>
  </div>
  </div>
<% end %>
<!-- card -->
<div class="py-4">
 <div class="container">
   <div class="row justify-content-center">
      <% @user.posts.each do |post| %>
       <div class="card mt-3 col-9 col-md-9 cardSz">
         <h5 class="card-header text-center py-4 bg-">
         <a href="/posts/<%= post.id %>", class="text-dark">
           <strong><%= post.title %></strong>
         </h5>
         </a>
         <div class="card-body px-lg-5 pt-4 text-center">
            <%= post.content %>
         </div>
         <div class="card-body px-lg-5 pt-4 text-center">
         <%= image_tag post.img.url, size: 150 if post.img? %>
         </div>
         <div class="card-body px-lg-5 pt-4 text-center">
            <%= post.created_at.strftime('%Y/%m/%d') %>
         </div>
       </div>
     <% end %>
   </div>
 </div>
</div>




